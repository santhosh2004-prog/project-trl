<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page showHeader="true" class="sapUiContentPadding sitePageBackground">
    <HBox justifyContent="Start" class="sapUiSmallMarginBottom">
    <VBox width="300px">
        <Label text="Site"/>
        <Input id="topName"/>
    </VBox>
</HBox>

        <!-- HEADER -->
        <customHeader>
            <Bar class="headerBarFix">
                <contentLeft>
                    <Image src="/images/logo.png" height="40px" class="siteLogo"/>
                </contentLeft>
               
        <contentMiddle>
            <HBox width="90%" justifyContent="Center">
                <Text text="SITE MANAGEMENT" class="siteHeaderTitle"/>
            </HBox>
        </contentMiddle>
            </Bar>
        </customHeader>

        <!-- GENERAL INFORMATION -->
        <Panel headerText="General Information" class="whiteCard">
    <layout:Grid defaultSpan="L4 M6 S12">

        <VBox>
            <Label text="Customer"/>
            <ComboBox id="customer" class="uniformField"/>
        </VBox>

        <VBox>
            <Label text="Location"/>
            <ComboBox id="location" class="uniformField"/>
        </VBox>

        <VBox>
            <Label text="Runner ID"/>
            <Input class="uniformField"/>
        </VBox>

        <VBox>
            <Label text="Campaign No"/>
            <Input id="campaign" editable="false" class="uniformField"/>
        </VBox>

        <VBox>
            <Label text="Repair Status"/>
            <ComboBox id="repairStatus" selectionChange="onRepairStatusChange" class="uniformField">
                <items>
                    <core:Item key="major" text="Major"/>
                    <core:Item key="minor" text="Minor"/>
                </items>
            </ComboBox>
        </VBox>

        <VBox>
            <Label text="Minor Repair Status"/>
            <Input class="uniformField"/>
        </VBox>

        <VBox>
            <Label text="No of House / Production Line"/>
            <Input type="Number" change="onLineCountChange" class="uniformField"/>
        </VBox>

    </layout:Grid>

    <HBox justifyContent="End" class="sapUiSmallMarginTop">
        <Button text="Create" type="Emphasized" press="onCreateCampaign"/>
        <Button text="Stop Campaign No" type="Reject" class="sapUiTinyMarginBegin" press="onStopCampaign"/>
    </HBox>
</Panel>


        <!-- DYNAMIC LINES -->
        <VBox id="linesContainer" width="100%"/>

        <!-- FOOTER -->
        <HBox justifyContent="End" class="actionBar">
            <Button text="Save" type="Emphasized" press="onSave"/>
            <!-- <Button text="Reset" press="onReset"/> -->
        </HBox>

    </Page>
</mvc:View>
