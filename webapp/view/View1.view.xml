<mvc:View
    controllerName="project1.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:core="sap.ui.core">

    <Page showHeader="true" class="sapUiContentPadding sitePageBackground">

        <!-- HEADER -->
        <customHeader>
            <Bar class="headerBarFix">
                <contentLeft>
                    <Image src="/images/logo.png" height="40px" class="siteLogo"/>
                </contentLeft>
                <contentMiddle>
                    <Text text="SITE MANAGEMENT" class="siteHeaderTitle"/>
                </contentMiddle>
            </Bar>
        </customHeader>

        <!-- GENERAL INFORMATION -->
        <Panel headerText="General Information" class="whiteCard">
            <layout:Grid defaultSpan="L4 M6 S12">

                <VBox>
                    <Label text="Customer"/>
                    <ComboBox id="customer"/>
                </VBox>

                <VBox>
                    <Label text="Location"/>
                    <ComboBox id="location"/>
                </VBox>

                <VBox>
                    <Label text="Runner ID"/>
                    <Input/>
                </VBox>

                <VBox>
                    <Label text="Campaign No"/>
                    <Input id="campaign" editable="false"/>
                </VBox>

                <VBox>
                    <Label text="Repair Status"/>
                    <ComboBox id="repairStatus" selectionChange="onRepairStatusChange">
                        <items>
                            <core:Item key="major" text="Major"/>
                            <core:Item key="minor" text="Minor"/>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox>
                    <Label text="No of House / Production Line"/>
                    <Input type="Number" change="onLineCountChange"/>
                </VBox>

            </layout:Grid>
        </Panel>

        <!-- DYNAMIC LINES -->
        <VBox id="linesContainer" width="100%"/>

        <!-- FOOTER -->
        <HBox justifyContent="End" class="actionBar">
            <Button text="Save" type="Emphasized" press="onSave"/>
            <!-- <Button text="Reset" press="onReset"/> -->
        </HBox>

    </Page>
</mvc:View>
